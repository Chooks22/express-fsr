{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "incremental": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "exclude": [
    "node_modules",
    "dist/**/*.ts"
  ]
}